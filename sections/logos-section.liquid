{% assign padding_top = section.settings.padding_top %}
{% assign padding_bottom = section.settings.padding_bottom %}

<style>
  .section-{{ section.id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
  }
</style>

<div class="section section-{{ section.id }}">
  <div class="main">
    <div class="owl-carousel" id="myCarousel">
      {% for block in section.blocks %}
        <div>
          <img
            src="{{ block.settings.logo_image | img_url }}"
            alt="{{ block.settings.logo_title }}"
            height="auto"
            width="auto"
          >
          <div class="logo-content">
            <div class="logo-title">{{ block.settings.logo_title }}</div>
            <div class="logo-description">{{ block.settings.logo_description }}</div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  var $owl = $('#myCarousel');
  var owl = $owl.owlCarousel({
    autoplay: true,
    dots: false,
    loop: true,
    responsiveBaseElement: '.main',
    responsive: {
      0: {
        items: 2,
        slideBy: 1,
      },
      400: {
        items: 1,
        slideBy: 1,
      },
      768: {
        items: 3,
        slideBy: 2,
      },
      992: {
        items: 4,
        slideBy: 2,
      },
      1200: {
        items: 6,
        slideBy: 2,
      },
    },
  });
</script>

{% schema %}
{
  "name": "Logos Slider",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "slider",
      "type": "slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "logo_title",
          "label": "Logo Title"
        },
        {
          "type": "text",
          "id": "logo_description",
          "label": "Logo Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logos Slider"
    }
  ]
}
{% endschema %}
